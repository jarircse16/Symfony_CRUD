{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1 style="text-align: center;">Product index</h1>

    <table class="table" style="margin: 0 auto; width: 50%;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody style="text-align: center;">
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.Name }}</td>
                <td>{{ product.Price }}</td>
                <td style="text-align: center;">
                    <a href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" colspan="4" style="text-align: center;">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
     <div style="text-align: center; margin-top: 10px;">
    <button><a style="text-decoration:none;" href="{{ path('app_product_new') }}">Create new</a></button>
    </div>
{% endblock %}
