{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div style="text-align: center;">
        <h1>Product</h1>

        <table class="table" style="display: inline-block; text-align: left;">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ product.Name }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ product.Price }}</td>
                </tr>
            </tbody>
        </table>

        <br>

        <button style="margin-top: 10px;">
            <a href="{{ path('app_product_index') }}" style="text-decoration:none;">Back to list</a>
        </button>

        <br><br>

        <button>
            <a href="{{ path('app_product_edit', {'id': product.id}) }}" style="text-decoration:none;">Edit</a>
        </button>

        <br><br>

        {{ include('product/_delete_form.html.twig') }}
    </div>
{% endblock %}
